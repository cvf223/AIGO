# AIGO Construction Syndicate Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/construction_syndicate
DATABASE_POOL_MAX=200
DATABASE_POOL_MIN=20
DATABASE_POOL_IDLE_TIMEOUT=300000

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=600000
OLLAMA_MODELS=qwen2.5:72b-instruct-fp16,mistral:7b-instruct-fp16,llava:34b,phi3:14b,llama3.3:70b

# Server Configuration
PORT=3001
NODE_ENV=production
SERVER_NAME=AIGO-Construction-Syndicate

# Memory Configuration (MB)
NODE_MAX_OLD_SPACE_SIZE=409600
NODE_SEMI_SPACE_SIZE=2048

# Redis Configuration (for distributed operations)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FILE=logs/construction-ai.log

# API Keys (if needed)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# WebSocket Configuration
WS_PORT=3001
WS_PING_INTERVAL=30000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this
ENCRYPTION_KEY=your-32-character-encryption-key

# Construction Specific
HOAI_COMPLIANCE_LEVEL=strict
DEFAULT_LANGUAGE=de
CONSTRUCTION_STANDARDS=DIN,VOB,HOAI

# Feature Flags
ENABLE_QUANTUM_PROCESSING=true
ENABLE_AUTONOMOUS_MODE=true
ENABLE_REALTIME_MONITORING=true
ENABLE_CONSTRUCTION_ANALYTICS=true

# Paths
DATA_PATH=./data
LOGS_PATH=./logs
UPLOADS_PATH=./uploads
CACHE_PATH=./cache
