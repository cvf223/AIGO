# ===== ELITE CONSTRUCTION AI SYNDICATE =====
# Production Environment Configuration
# Version: 1.0.0
# Server: AMD EPYC 7502P (32 cores), 896GB RAM, 2x960GB SATA SSDs

# ===== NODE CONFIGURATION =====
NODE_ENV=production
NODE_OPTIONS=--max-old-space-size=122880 --enable-source-maps
UV_THREADPOOL_SIZE=128

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://construction_user:your_secure_password@localhost:5432/elite_agent_syndicate
DATABASE_POOL_MAX=500
DATABASE_POOL_IDLE_TIMEOUT=30000
DATABASE_STATEMENT_TIMEOUT=60000
DATABASE_QUERY_TIMEOUT=60000

# ===== AUTHENTICATION =====
JWT_SECRET=generate-64-character-secure-secret-here
SESSION_SECRET=generate-another-64-character-secret-here
REFRESH_TOKEN_SECRET=generate-third-64-character-secret-here
ADMIN_API_KEY=generate-secure-admin-api-key-here
ENCRYPTION_KEY=generate-32-character-encryption-key
DEFAULT_ADMIN_PASSWORD=ChangeThisImmediately123!

# ===== SERVER CONFIGURATION =====
CONSTRUCTION_GUI_PORT=3001
CONSTRUCTION_GUI_HOST=0.0.0.0
LOG_MONITORING_PORT=3003
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ===== EXTERNAL URLS =====
API_URL=https://api.your-domain.com
WS_URL=wss://api.your-domain.com
FRONTEND_URL=https://your-domain.com

# ===== LLM CONFIGURATION =====
OLLAMA_HOST=http://localhost:11434
DEEPSEEK_API_URL=https://api.deepseek.com/v1
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GROQ_API_KEY=your-groq-api-key
OPENROUTER_API_KEY=your-openrouter-api-key

# ===== VISION MODEL CONFIGURATION =====
VISION_MODEL=llava:13b
QWEN_VL_MODEL=qwen:72b-chat-v1.5-fp16
VISION_MAX_IMAGE_SIZE=2048

# ===== BLOCKCHAIN CONFIGURATION =====
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/your-api-key
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/your-api-key
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-api-key
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/your-api-key

# ===== BLOCKCHAIN KEYS (HOT WALLET - USE WITH CAUTION) =====
# CRITICAL: Only put minimal funds needed for operations
HOT_WALLET_PRIVATE_KEY=your-hot-wallet-private-key
FLASHLOAN_CONTRACT_ADDRESS=0x...

# ===== API KEYS =====
ALCHEMY_API_KEY=your-alchemy-api-key
INFURA_PROJECT_ID=your-infura-project-id
MORALIS_API_KEY=your-moralis-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key

# ===== FILE STORAGE =====
UPLOAD_DIR=/var/www/construction-syndicate/uploads
MAX_FILE_SIZE=104857600  # 100MB
ALLOWED_FILE_TYPES=pdf,png,jpg,jpeg,dwg,dxf

# ===== MONITORING & LOGGING =====
LOG_LEVEL=info
LOG_DIR=/var/log/construction-syndicate
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_PUSHGATEWAY=http://localhost:9091

# ===== SECURITY =====
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_HELMET=true
ENABLE_COMPRESSION=true
TRUST_PROXY=true

# ===== PERFORMANCE OPTIMIZATION =====
CACHE_TTL=3600
ENABLE_QUERY_CACHE=true
ENABLE_RESULT_CACHE=true
CACHE_REDIS_URL=redis://localhost:6379
WORKER_THREADS=16
CLUSTER_WORKERS=4

# ===== QUANTIZATION ENGINE =====
ENABLE_QUANTIZATION=true
QUANTIZATION_LEVEL=INT8
QUANTIZATION_CACHE_DIR=/var/cache/construction-syndicate/models

# ===== NUMA OPTIMIZATION =====
NUMA_NODES=4
NUMA_MEMORY_POLICY=interleave
CPU_AFFINITY_MAIN=0-15
CPU_AFFINITY_API=16-19
CPU_AFFINITY_FRONTEND=20-21
CPU_AFFINITY_MONITORING=22

# ===== EMAIL CONFIGURATION (Optional) =====
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@your-domain.com

# ===== BACKUP CONFIGURATION =====
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000  # 24 hours
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backup/construction-syndicate

# ===== FEATURE FLAGS =====
ENABLE_ARBITRAGE=true
ENABLE_AGENT_CREATION=true
ENABLE_PLAN_ANALYSIS=true
ENABLE_VLM_ANNOTATION=true
ENABLE_HUMAN_IN_LOOP=true
ENABLE_AUTO_TRADING=false  # Set to true when ready for production trading

# ===== DEVELOPMENT/DEBUG (Set to false in production) =====
DEBUG=false
VERBOSE_LOGGING=false
DISABLE_AUTH=false
MOCK_BLOCKCHAIN=false
MOCK_LLM=false

# ===== CUSTOM SETTINGS =====
CONSTRUCTION_STANDARDS=DIN276,HOAI
DEFAULT_CURRENCY=EUR
DEFAULT_LANGUAGE=en
TIMEZONE=UTC
