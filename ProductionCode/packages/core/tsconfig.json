{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "ES2021", "DOM"],
        "moduleResolution": "Bundler",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "allowJs": true,
        "checkJs": false,
        "noEmitOnError": false,
        "moduleDetection": "force",
        "allowArbitraryExtensions": true,
        "customConditions": ["@elizaos/source"],
        "types": ["node"],
        "composite": true,
        "declarationMap": true,
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "src/**/*.d.ts", "types/**/*.test.ts"]
}
